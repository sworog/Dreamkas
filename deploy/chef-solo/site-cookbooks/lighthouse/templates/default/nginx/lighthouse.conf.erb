# api
server {
    server_name ~^(?<apihost>.+)\.(?<env>.+?)\.api\.(lighthouse|lh)\.(cs|pro)$;
    root /var/www/$apihost.$env.api/current/web;

    access_log /var/log/nginx/$apihost.$env.api.access.log;
    error_log  /var/log/nginx/$apihost.$env.api.error.log;

    index app.php;
    error_page 404 = /404.html?apihost=$apihost&env=$env;

    location / {
        try_files $uri $uri/ @rewrite;
    }

    location @rewrite {
        rewrite ^(.*)$ /app.php/$1 last;
    }
        
    location ~ \.php($|/) {
        if (!-f $document_root/$fastcgi_script_name) {
            return 404;
        }
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index app.php;
        fastcgi_param SYMFONY_ENV $env;
        fastcgi_param SYMFONY_DEBUG 0;
        include fastcgi_params;
    }

    location ~ /\.ht {
        deny all;
    }
    
    location /404.html {
        ssi on;
        root /var/www/nginx;
    }

    location /favicon.ico {
        root /var/www/nginx;
    }
}

# webfront
server {
    server_name ~^(?<webfronthost>.+)\.(?<env>.+?)\.webfront\.(lighthouse|lh)\.(cs|pro)$;
    server_name ~^(?<webfronthost>.+(?!\.webfront))\.(lighthouse|lh)\.(cs|pro)$;

    if ($env = "") {
        set $env "staging";
    }

    root /var/www/$webfronthost.$env.webfront/current;

    access_log /var/log/nginx/$webfronthost.$env.webfront.access.log;
    error_log  /var/log/nginx/$webfronthost.$env.webfront.error.log;

    index index.html;

    error_page 404 = /404.html?webfronthost=$webfronthost&env=$env;

    try_files $uri $uri/ @rewrite;

    location @rewrite {
        if (!-f $document_root/index.html) {
            return 404;
        }
        rewrite ^.*$ /index.html last;
    }

    location ~ /\.ht {
        deny all;
    }

    location /404.html {
        ssi on;
        root /var/www/nginx;
    }

    location /favicon.ico {
        root /var/www/nginx;
    }
}
