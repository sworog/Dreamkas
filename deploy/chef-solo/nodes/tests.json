{
    "run_list": [
        "recipe[apt::default]",
        "recipe[mongodb::10gen_repo]",
        "recipe[mongodb]",
        "recipe[php]",
        "recipe[composer]",
        "recipe[beanstalkd]",

        "recipe[lighthouse]",
        "recipe[lighthouse::tests]"
    ],
    "php": {
        "directives": {
            "date.timezone": "Europe/Moscow"
        }
    },
    "beanstalkd": {
        "opts": {
            "l": "0.0.0.0",
            "p": "11300"
        },
        "start_during_boot": true
    }
}
