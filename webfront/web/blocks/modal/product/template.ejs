<div tabindex="-1"
     role="dialog"
     aria-labelledby="modal-default-label"
     aria-hidden="true"
     class="modal modal_product fade"
     id="modal_product"
     style="display: none;">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a type="button"
                   data-dismiss="modal"
                   aria-hidden="true"
                   class="close pull-left fa fa-times"></a>

                <button form="form_product"
                        type="submit"
                        class="btn btn-primary pull-right">
                    <%- models.product.id ? 'Сохранить' : 'Добавить' %>
                </button>

                <h4 class="modal-title">
                    <%- models.product.id ? 'Редактирование товара #' + models.product.get('sku') : 'Добавление товара' %>
                </h4>

                <span class="clearfix"></span>
            </div>
            <div class="modal-body">

                <b block="form_product"></b>

            </div>
        </div>
    </div>
</div>