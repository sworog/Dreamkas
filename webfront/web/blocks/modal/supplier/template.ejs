<div id="modal-supplier"
	 tabindex="-1"
	 role="dialog"
	 aria-labelledby="modal-default-label"
	 aria-hidden="true"
	 class="modal fade"
	 style="display: none;">

	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a type="button"
				   data-dismiss="modal"
				   aria-hidden="true"
				   class="close pull-left fa fa-times"></a>

				<button form="form-supplier"
						type="submit"
						class="btn btn-primary pull-right">
					<%- supplierId != 0 ? 'Сохранить' : 'Добавить' %>
				</button>

				<h4 class="modal-title">
					<%- supplierId != 0 ? 'Редактирование поставщика' : 'Добавить поставщика' %>
				</h4>

				<span class="clearfix"></span>
			</div>
			<div class="modal-body">

				<b block="supplierForm" data-supplier-id="<%- supplierId %>"></b>

			</div>
		</div>
	</div>
</div>