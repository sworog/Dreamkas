<% if (model) { %>

<div class="sale">
    <div class="sale__header">
        <span class="sale__title">Чек на сумму <%- formatMoney(model.get('sumTotal')) %> <i class="fa fa-rub"></i></span>
	<span role="button"
		  class="sale__refundButton btn btn-primary btn-md">Возврат</span>
	</div>
	<div name="sale" class="sale__info">
		<div>
			<%= model.get('payment.type') == 'cash' ?
				'<i class="fa fa-money"></i><span name="cash">Наличные</span>' :
				'<i class="fa fa-credit-card"></i><span name="bankcard">Банковская карта</span>' %>
		</div>
		<div>
			<i class="fa fa-clock-o"></i>
            <span name="date">
                <%- formatDateTime(model.get('date'), { format: 'DD MMMM YYYY, HH:mm' }) %>
            </span>
		</div>
	</div>
	<div name="products" class="sale__products">
		<div class="sale__productsTitle">Товары</div>
		<table>

            <% model.collections.products.forEach(function(receiptProduct){ %>

			<tr class="sale__product">
				<td class="sale__productName" name="name"><%- receiptProduct.get('product.name') %></td>
				<td class="sale__productQuantity" name="quantity"><%- receiptProduct.get('quantity') %> шт</td>
				<td class="sale__productPrice" name="price"><%- formatAmount(receiptProduct.get('price'), '0,0.00[00]') %> <i class="fa fa-rub"></i></td>
			</tr>

            <% }) %>

        </table>
    </div>

    <b block="modal_refund"></b>

</div>

<% } else { %>

<div class="alert alert-info">
    Чтобы посмотреть подробную информацию, выберите чек из списка.
</div>

<% } %>