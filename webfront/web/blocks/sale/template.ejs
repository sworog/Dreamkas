<% if (model) { %>

<div class="sale">
	<div class="sale__header">
	<span class="sale__title">Чек на сумму <%- formatAmount(model.get('sumTotal')) %> <i class="fa fa-rub"></i></span>
	<span role="button"
		  class="sale__refundButton btn btn-primary btn-md">Возврат</span>
	</div>
	<div class="sale__info">
		<div>
			<%= model.get('payment.type') == 'cash' ?
				'<i class="fa fa-money"></i>Наличные' :
				'<i class="fa fa-credit-card"></i>Банковская карта' %>
		</div>
		<div>
			<i class="fa fa-clock-o"></i><%= formatDateTime(model.get('date')) %>
		</div>
	</div>
	<div class="sale__products">
		<div class="sale__productsTitle">Товары</div>

		<% model.collections.products.forEach(function(receiptProduct){ %>

		<div class="sale__product">
			<div class="sale__productName"><%= receiptProduct.get('product.name') %></div>
			<div><%= receiptProduct.get('quantity') %> шт</div>
			<div><%= receiptProduct.get('price') %> <i class="fa fa-rub"></i></div>
		</div>

		<% }) %>
	</div>
</div>

<% } else { %>

<div class="alert alert-info">
	Чтобы посмотреть подробную информацию, выберите чек из списка
</div>

<% } %>