<form id="<%- id %>" class="form form_invoice">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">

                <label class="control-label">Дата *</label>

                <b block="inputDate"
                   data-value="<%- model.get('date') ? formatDate(model.get('date')) : formatDate(new Date()) %>"></b>

            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">

                <label class="control-label">Магазин *</label>

                <div class="input-icon right">

                    <b block="select_store"></b>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">

                <label class="control-label">Поставщик</label>

                <div class="row">
                    <div class="col-md-10">

                        <b block="select_supplier"></b>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="checkbox">
            <input tabindex="5"
                   type="checkbox"
                   name="paid"
                   value="true" <%- model.get('paid') ? 'checked' : '' %>/>
                    <span class="checkbox__text">
                        Оплачено
                    </span>
        </label>
    </div>
</form>