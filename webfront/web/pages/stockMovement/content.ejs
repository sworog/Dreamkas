<% var partials = {
    modal_invoice: require('ejs!blocks/modal/modal_invoice/modal_invoice.ejs')
}; %>

<% var helpers = {
    formatMoney: require('kit/formatMoney/formatMoney'),
    formatDate: require('kit/formatDate/formatDate')
} %>

<!--BEGIN TITLE PAGE-->
<div class="page-title-breadcrumb">

    <div class="pull-right">
        <span data-target="#modal_invoiceAdd"
              data-toggle="modal"
              role="button"
              class="btn btn-primary btn-md">Принять от поставщика</span>
    </div>

    <div class="page-header pull-left">
        <div class="page-title">Товародвижение</div>
    </div>

    <div class="clearfix"></div>
</div>
<!--END TITLE PAGE-->

<!--BEGIN CONTENT-->
<div class="page-content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Дата</th>
                                <th>Операция</th>
                                <th>Магазин</th>
                                <th>На сумму, <i class="fa fa-rub"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% collections.invoices.forEach(function(invoice) { %>
                                <% console.log(invoice) %>
                                <tr data-invoice_id="<%- invoice.id %>" class="invoice__link">
                                    <td>
                                        <%- helpers.formatDate(invoice.get('date')) %>
                                    </td>
                                    <td>
                                        Приёмка
                                    </td>
                                    <td>
                                        <%- invoice.get('store.number') %>
                                    </td>
                                    <td>
                                        <%- helpers.formatMoney(invoice.get('sumTotal')) %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END CONTENT-->

<!--MODALS-->
<%= partials.modal_invoice({
    collections: {
        suppliers: collections.suppliers,
        stores: collections.stores
    }
}) %>
<!--END MODALS-->