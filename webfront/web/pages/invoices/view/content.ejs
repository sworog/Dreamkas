<% var templates = _.extend({
    form_invoice: require('ejs!blocks/form/form_invoice/template.html')
}, templates) %>

<div class="content">
    <h1>
        Накладная № <span name="number"><%- PAGE.models.invoice.get('number') %></span>
        <% if(PAGE.models.invoice.get('order')) { %>
            <p name="order-info">
                на основании
                <a href="/stores/<%- PAGE.models.store.id %>/orders/<%- PAGE.models.invoice.get('order').id %>">
                    заказа №<%- PAGE.models.invoice.get('order').number %>
                </a> от
                <%- moment(PAGE.models.invoice.get('createdDate')).format('DD.MM.YYYY') %>
            </p>
        <% } %>
    </h1>
    <%= templates.form_invoice({
        storeId: params.storeId
    }) %>
</div>
