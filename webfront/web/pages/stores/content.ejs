<% var partials = {
    modal_storeForm: require('ejs!blocks/modal/modal_storeForm/modal_storeForm.ejs')
}; %>


<!--BEGIN TITLE PAGE-->
<div class="page-title-breadcrumb">

    <div class="pull-right">
        <span data-target="#modal-storeAdd"
              data-toggle="modal"
              role="button"
              class="btn btn-primary btn-md">Добавить магазин</span>
    </div>

    <div class="page-header pull-left">
        <div class="page-title">

            Магазины
        </div>
    </div>

    <div class="clearfix"></div>
</div>
<!--END TITLE PAGE-->

<!--BEGIN CONTENT-->
<div class="page-content">
    <div class="row">
        <div class="col-md-12">
            <% if (collections.stores.length) { %>

            <div class="panel">
                <div class="panel-body">
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th data-products-sort-by="name">
                                Название
                            </th>
                            <th data-products-sort-by="address">
                                Адрес
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                            <% collections.stores.forEach(function(storeModel){ %>
                                <tr class="store__link" data-store_id="<%- storeModel.id %>">
                                    <td data-value="<%- storeModel.get('name') %>"
                                        name="name"><%- storeModel.get('name') %></td>
                                    <td data-value="<%- storeModel.get('address') %>"
                                        name="address"><%- storeModel.get('address') %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <% } else { %>
            <div class="col-md-12">
                <div class="alert alert-info">
                    У вас ещё нет ни одного магазина
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
<!--END CONTENT-->

<!--MODALS-->

<%= partials.modal_storeForm() %>

<% if (models.store) { %>
<%= partials.modal_storeForm({
    store: models.store
}) %>
<% } %>

<!--END MODALS-->