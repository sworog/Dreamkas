<% var partials = {
    modal_supplierForm: require('ejs!blocks/modal/supplier/supplier.ejs')
}; %>


<!--BEGIN TITLE PAGE-->
<div class="page-title-breadcrumb">

    <div class="pull-right">
        <span data-target="#modal-supplierAdd"
              data-toggle="modal"
              role="button"
              class="btn btn-primary btn-md">Добавить поставщика</span>
    </div>

    <div class="page-header pull-left">
        <div class="page-title">
            Поставщики
        </div>
    </div>

    <div class="clearfix"></div>
</div>
<!--END TITLE PAGE-->

<!--BEGIN CONTENT-->
<div class="page-content">
    <div class="row">
        <div class="col-md-12">

            <% if (collections.suppliers.length) { %>

            <div class="panel">
                <div class="panel-body">
                    <table class="table table-hover table-striped">
                        <tbody>
                            <% collections.suppliers.forEach(function(supplierModel){ %>
                                <tr class="supplier__link" data-supplier-id="<%- supplierModel.id %>">
                                    <td name="name"><%- supplierModel.get('name') %></td>
                                    <td style="font-size: 12px;">
                                        <div name="address" style="padding-bottom: 5px;">
                                            <%- supplierModel.get('address') %>
                                        </div>
                                        <span name="info">
                                            <%- supplierModel.get('phone') ? supplierModel.get('phone') + ', ' : '' %>
                                            <%- supplierModel.get('contactPerson') ? supplierModel.get('contactPerson') + ', ' : '' %>
                                            <%- supplierModel.get('email') %>
                                        </span>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <% } else { %>
            <div class="col-md-12">
                <div class="alert alert-info">
                    У вас ещё нет ни одного поставщика
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
<!--END CONTENT-->

<!--MODALS-->

<%= partials.modal_supplierForm() %>

<% if (models.supplier) { %>
<%= partials.modal_supplierForm({
    supplierModel: models.supplier
}) %>
<% } %>

<!--END MODALS-->
