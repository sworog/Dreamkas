<% var templates = _.defaults(templates, {
    form_order: require('ejs!blocks/form/form_order/template.ejs')
}) %>


<div class="content">
    <% if (null == models.order.get('invoice')) { %>
        <div class="page__controls">
            <ul class="page__controlsList">
                <li>
                    <a class="page__controlsLink page__downloadLink" href="<%- LH.baseApiUrl %>/stores/<%- models.order.get('store.id') %>/orders/<%- models.order.id %>/download">Скачать файл заказа</a>
                </li>
                <li>
                    <a class="page__controlsLink form_order__removeLink">Удалить</a>
                </li>
            </ul>
        </div>
    <% } %>
    <h2>Заказ поставщику № <span name="orderNumber"><%- models.order.get('number') %></span></h2>

    <%= templates.form_order({
        storeId: params.storeId,
        collections: _.pick(collections, 'suppliers'),
        model: models.order
    }) %>
</div>