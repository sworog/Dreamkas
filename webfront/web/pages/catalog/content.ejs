<% var partials = {
    modal_groupForm: require('ejs!blocks/modal/group/group.ejs')
} %>

<!--BEGIN TITLE PAGE-->
<div class="page-title-breadcrumb">

    <div class="pull-right">
        <span data-target="#modal-groupAdd"
              data-toggle="modal"
              role="button"
              class="btn btn-primary btn-md">Добавить группу</span>
    </div>

    <div class="page-header pull-left">
        <div class="page-title">Ассортимент</div>
    </div>

    <div class="clearfix"></div>
</div>
<!--END TITLE PAGE-->

<!--BEGIN CONTENT-->
<div class="page-content">
    <div class="row">
        <% if (collections.groups.length) { %>
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    <ul class="groupList">

                        <% collections.groups.forEach(function(group) { %>

                        <li>
                            <a class="groupList__link"
                               href="/catalog/groups/<%- group.id %>">
                                <i class="fa fa-angle-right pull-right"></i>
                                <%= group.get('name') %>
                            </a>
                        </li>

                        <% }) %>

                    </ul>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="col-md-12">
            <div class="alert alert-info">
                У вас пока нет ни одной группы товаров.
            </div>
        </div>
        <% } %>
    </div>
</div>
<!--END CONTENT-->

<!--MODALS-->
<%= partials.modal_groupForm() %>
<!--END MODALS-->