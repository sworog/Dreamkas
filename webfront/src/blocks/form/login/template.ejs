<form class="form form_login">
    <h1 class="form__header">Вход</h1>

    <div class="form__body">

        <div class="form_login__message"><%- get('message') %></div>

        <div class="form-group">
            <div class="input-group">

                <span class="input-group-addon">
                    <div style="width: 15px; text-align: center">
                        <i class="fa fa-user"></i>
                    </div>
                </span>

                <input type="text"
                       placeholder="Email"
                       name="username"
                       value="<%- LoginModel.email %>"
                        <%- LoginModel.email ? '' : 'autofocus' %>
                       class="form-control">

            </div>
        </div>

        <div class="form-group">
            <div class="input-group">

                <span class="input-group-addon">
                    <div style="width: 15px; text-align: center">
                        <i class="fa fa-key"></i>
                    </div>
                </span>

                <input type="password"
                       placeholder="Пароль"
                       name="password"
                        <%- LoginModel.email ? 'autofocus' : '' %>
                       class="form-control">
            </div>
        </div>

        <div style="padding-bottom: 20px;" class="form__errorMessage form__errorMessage_global"></div>

        <div class="form-group pull-right">
            <button type="submit" class="btn btn-success">
                Войти
                &nbsp;
                <i class="fa fa-chevron-circle-right"></i>
            </button>
        </div>

        <p style="padding-top: 7px;">Нет аккаунта? <a id="btn-register" href="/signup">Зарегистрируйтесь</a></p>

        <div class="forget-password" style="padding-top: 8px;">
            <a href='/recover' class='btn-forgot-pwd'>Забыли пароль?</a>
        </div>

    </div>
</form>